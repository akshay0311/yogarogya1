    <!--Script For Geotagging------------->
    <script>
      function getloc(){    
        // For Geolocation
        if ('geolocation' in navigator){
          console.log("geo");
          navigator.geolocation.getCurrentPosition(function(p){
            var lat = p.coords.latitude;
            var long = p.coords.longitude;
            initMap(lat,long);
            reverseGeocode(lat,long);
          })
        }
      }
      function reverseGeocode(lat,long){
         fetch(" https://maps.googleapis.com/maps/api/geocode/json?latlng="+lat+","+long+"&key=AIzaSyBqeD1eqrxVLrJDUF3r9rMS-U-leaCiKKw")
         .then(response=>{
            return response.json();
         })
         .then(json=> format_Address(json.results[0].formatted_address))
         .catch(err=>console.log(err));
      }
      function format_Address(address){
         console.log(address);
         document.getElementById("address").value = address;
      }
      // For Map
      function initMap(lat,long){
      // Map options
      var options = {
        zoom:16,
        center:{lat:lat,lng:long}
      }
      // New map
      var map = new google.maps.Map(document.getElementById('map'), options);
      // marker on the map
      var marker = new google.maps.Marker({
        position:{lat:lat,lng:long},
        map:map
      });   
    </script>

   
