<!-------------------------Page------------>
<br>
<br>
<div class="container">
    <p><b class="w3-xxlarge">Welcome&nbsp;</b><i class="w3-xlarge">{{name}}</i></p>
    <a href="/student/dashboard" class="btn btn-outline-info">Refresh</a>
</div>
<br>
<!--Page Container-->
<div class="container">
    <div class="row">
        <!--Left Sidebar-->
        <div class="col-md-4 col-sm-12">
                <div class="w3-card w3-round" style="height: 600px;">
                <div class="w3-container">
                    <!---Profile Pic Display----->
                     <!---Profile Pic Display----->
                    <p class="w3-center w3-xlarge mt-3"  style="font-family: 'Recursive', sans-serif;">My Profile</p>
                    <br>
                        <p class="w3-center"><img src="http://localhost:5000/{{pp}}" class="w3-circle" style="height:110px;width:106px" alt="Avatar"
                         onerror=this.src="http://localhost:5000/avatar.png"></p>
                    <div class="w3-center">
                        <!----Upload Profile Pic ---->
                        <div class="dropdown">
                        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                         Upload Profile Pic
                        </button>
                        <div class="dropdown-menu">
                            <form action="/student/dash" method="POST" enctype="multipart/form-data">
                                <input type="hidden" id="email" name="email" value="{{email}}">
                                <input type="file" name="student_profile_pic"><br>   
                                <button class="btn btn-info" type="submit">Upload</button>
                            </form>
                        </div> 
                    <br>
                    <br>
                    <!---Personal Info----->
                    <p><b class="w3-text-blue-gray">Name:&nbsp;&nbsp;</b>{{name}}</p>
                    <p><b class="w3-text-blue-gray">Phone No:&nbsp;&nbsp;</b>{{phone}}</p>
                    <p><b class="w3-text-blue-gray">EmailId:&nbsp;&nbsp;</b>{{email}}</p>   
                    <p><b class="w3-text-blue-gray">Address:&nbsp;&nbsp;</b>{{address}}</p>                
                </div>
            </div>
        </div>
    </div>
    </div>

    <!---Page Center --->
    <!--Courses Taken--->
     <div class="col-md-8 col-sm-12">
          <div class="w3-card w3-round w3-white mt-3 mt-md-0">
              <div class="w3-container">
                    <div class="container pt-4">
                        <span class=" w3-xlarge" style="font-family: 'Recursive', sans-serif;">Courses Taken</span>
                        {{#each ct}}
                            <li>{{this.name}}</li>
                        {{/each}}
                    </div>
                    <br>
            </div>
          </div>
          <br>
        <!--Progress of each session--->
        <div class="w3-card w3-round w3-white">
              <div class="w3-container">
                    <div class="container pt-4">
                      <span class=" w3-xlarge" style="font-family: 'Recursive', sans-serif;">Your Progress</span>
                  </div>
              </div>
              <br>
              <br>
              <div class="container">
                      {{#each ct}}
                         <div class="container">
                                <span>{{this.name}}</span>
                                <br>
                                <div class="progress">
                                <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="{{this.progress}}"
                                aria-valuemin="0" aria-valuemax="100" style="width:{{this.progress}}">
                                {{this.progress}}
                                </div>
                            </div>
                         </div>
                        <br>
                        <br>
                      {{/each}}
              </div>
              <br>
        </div>    
    </div>
            