<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-user-plus"></i> Register
      </h1>
      <!--Name-->
      {{#if errors}}
            {{#each errors}}
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                   <p>{{this.msg}}</p>
            </div>
            {{/each}}
      {{/if}}
      <form action="/users/register" method="POST">
        <div class="form-group">
          <label for="name">Full Name</label>
          <input
            type="name"
            id="name"
            name="name"
            class="form-control"
            placeholder="Enter Full Name"
            value="{{name}}"
          />
        </div>
        <!--Email-->
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
            value="{{email}}"
          />
        </div>
        <!--Password-->
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Create Password"
            value="{{password}}"
          />
        </div>
        <!--Confirm Password-->
        <div class="form-group">
          <label for="password2">Confirm Password</label>
          <input
            type="password"
            id="password2"
            name="password2"
            class="form-control"
            placeholder="Confirm Password"
            value="{{password2}}"
          />
        </div>
        <!--Contact Number-->
        <div class="form-group">
            <label for="cnum">Contact Number:</label>
            <input type="text" class="form-control" placeholder="Enter Contact Number" id="phone" name="phone">
        </div>
        <br>
        <br>
        <a class="w3-text-red" href="/terms">Click To: Read Terms & Condition</a>
        <br>
        <input type="checkbox" class="ml-2 form-check-input" name="optradio"value="I accept"><b class="ml-4">I accept terms & conditons </b>
        <br>
        <br>
        <button type="submit" class="btn btn-primary btn-block">Register</button>
        <br>
      </form>  
      <p class="lead mt-4">Have An Account? <a class="w3-text-blue" href="/users/login">Login</a></p>
    </div>
  </div>
