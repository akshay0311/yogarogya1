                        </ul>
                        <form action="/book_package/pay" method="POST">
                            <input type="text" name="sessions" value='{{this.sessions}}'hidden>
                            <input type="text" name="mode" value='{{mode}}'hidden>
                            <input type="text" name="participants" value='group'hidden>
                            <button class="site-btn sb-line-gradient">Book Now!</button>
                        </form>
                    </div>
                </div>
            {{/each}} 
        </div>
    </div><!---Container Closed--------->
</div> <!---myDiv Closed------------>   
<script>
    $(document).ready(function(){
            var x = document.getElementsByClassName("myDiv");
            // click on single button   
            if ("{{p}}" == 'single') {
            x[0].style.display = 'block';x[1].style.display = 'none'; x[2].style.display = 'none';}
            else if("{{p}}" == 'couple'){
             x[0].style.display = 'none';x[1].style.display = 'couple'; x[2].style.display = 'none';}   
            else{
                x[0].style.display = 'none';x[1].style.display = 'none'; x[2].style.display = 'block';}

            $("#b1").click(()=>{
                x[0].style.display = 'block';
                x[1].style.display = 'none';
                x[2].style.display = 'none';  
            })
            $("#b2").click(()=>{
                x[0].style.display = 'none';
                x[1].style.display = 'block';
                x[2].style.display = 'none';  
            })
            $("#b3").click(()=>{
                x[0].style.display = 'none';
                x[1].style.display = 'none';
                x[2].style.display = 'block';  
            })            
        })
</script>
        