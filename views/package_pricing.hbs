<!---------------Pricing Page-------------->
<br>
<div class="container">
    <div class="row gy-3">
        <div class="col-4">
            <button id="b1" class="btn w3-text-white btn-block" rel="popover" 
            style="background: #fdb07d;font-family: 'Tenor Sans', sans-serif;"
            >Single</button>
        </div>
        <div class="col-4">
            <button id="b2" class="btn w3-text-white btn-block" rel="popover"
            style="background: #fa8f70;font-family: 'Tenor Sans', sans-serif;">Couple</button>
        </div>
        <div class="col-4">
            <button id="b3" class="btn w3-text-white btn-block" rel="popover" 
            style="background: #f2786f;font-family: 'Tenor Sans', sans-serif;">Group</button>
        </div>
    </div>
</div>    
<br>
<!------------------Pricing Section---------------------------->
<div class="myDiv" style="font-family: Montserrat, sans-serif;">
    <div class="container">
        <div class="row">
            {{#each single}}
            <div class="col-md-4">
                <div class="pricing-item begginer">
                    <div class="pi-top">
                        <h4>Single {{mode}} Price</h4>
                    </div>
                    <div class="pi-price" style="margin-bottom:0;">
                        <span><b>Rs.</b><h1>{{this.price}}</h1></span>
                    </div >
                    <br>
                    <ul>
                        <li class="mr-3"><b>For {{this.sessions}} sessions plan</b></li>
                        <li class="mr-3"><b>Validity For {{this.validity}}</b></li>
                    </ul>
                    <form action="/book_package/pay" method="POST">
                        <input type="text" name="sessions" value='{{this.sessions}}'hidden>
                        <input type="text" name="mode" value='{{mode}}'hidden>
                        <input type="text" name="participants" value='single'hidden>
                        <button class="site-btn sb-line-gradient">Book Now!</button>
                    </form>
            </div>
            </div>
            {{/each}}
        </div>
    </div><!----------Container  Closed---------->
</div><!------myDiv Closed----------->
