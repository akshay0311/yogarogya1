<!------------------Pricing Section---------------------------->
<div class="myDiv">
    <div class="container">
        <h2 class="w3-center">Single Pricing</h2>
        <br>
        <div class="row">
             {{#each single}}
            <div class="col-md-4">
                <div class="card w3-round-large w3-border w3-border-dark-grey mb-2">
                    <div class="card-body">
                        <b class="w3-medium">Sessions:<b class="w3-large">&nbsp;{{this.sessions}}</b></b><br><br>
                        <b>Validity:<b>&nbsp;{{this.validity}}</b></b><br><br>
                        <b class="w3-large">Rs.<b class="w3-xxlarge">&nbsp;{{this.price}}</b></b><br><br>
                        <!----Book Now Section-------->
                        <form action="/book_package/pay" method="POST">
                            <input type="text" name ="participants" value="single" hidden/>
                            <input type="text" name ="mode" value="{{this.mode}}" hidden/>
                            <input type="text" name ="sessions" value="{{this.sessions}}" hidden/>
                            <button type="submit" class="btn btn-info w3-round-xxlarge">Buy Now!</button>
                        </form>  
                    </div>      
                </div>
            </div>
            {{/each}}
        </div>
    </div><!----------Container  Closed---------->
</div><!------myDiv Closed----------->
