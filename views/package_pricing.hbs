<div class="container">
    <div class="row gy-3">
        <div class="col-4">
            <button id="b1" class="btn btn-dark btn-block" rel="popover">Single</button>
        </div>
        <div class="col-4">
            <button id="b2" class="btn btn-dark btn-block" rel="popover">Couple</button>
        </div>
        <div class="col-4">
            <button id="b3" class="btn btn-dark btn-block" rel="popover">Group</button>
