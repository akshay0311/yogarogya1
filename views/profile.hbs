<!----------Main Page--------------------->
<!--Error Display------------------>
<div class="container w3-round-xxlarge">
   {{#if flag}}
  {{else}}
        <div class="alert alert-warning w3-small alert-dismissible fade show" role="alert">
        <p class="w3-center pt-2 w3-text-black w3-large">
          <i>Complete your profile</i>
        </p>    
    </div>
  {{/if}}    
